<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title_text" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_edit_redbag"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="@dimen/space15">

            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:gravity="start"
                android:hint="@string/you_want_to_say"
                android:maxEms="1024"
                android:minHeight="@dimen/space50"
                android:textSize="@dimen/textfont13" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space15"
                android:nestedScrollingEnabled="false"></android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space15"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lin_word"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_password_tip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space10"
                        android:layout_marginLeft="@dimen/space10"
                        android:layout_marginTop="@dimen/space10"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/textfont11" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space40"
                        android:background="@drawable/bg_input_white"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/space10"
                        android:paddingRight="@dimen/space10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/word_item_name"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/textfont14" />

                        <EditText
                            android:id="@+id/et_word"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="right|center_vertical"
                            android:hint="@string/word_item_hint"
                            android:maxLength="20"
                            android:paddingLeft="@dimen/space10"
                            android:paddingRight="@dimen/space10"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/textfont14" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space10"
                        android:layout_marginRight="@dimen/space10"
                        android:layout_marginTop="@dimen/space10"
                        android:layout_marginBottom="@dimen/space10"
                        android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/amout_tip"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/textfont11" />

                    <CheckBox
                        android:id="@+id/cb_public_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableLeft="@drawable/ic_check_selector"
                        android:drawablePadding="@dimen/space10"
                        android:checked="true"
                        android:padding="@dimen/space3"
                        android:text="@string/link_public_password"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/textfont13" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space40"
                        android:background="@drawable/bg_input_white"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/space10"
                        android:paddingRight="@dimen/space10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/amout_item_name"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/textfont14" />

                        <EditText
                            android:id="@+id/et_amout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="right|center_vertical"
                            android:hint="@string/amout_item_hint"
                            android:inputType="number"
                            android:paddingLeft="@dimen/space10"
                            android:paddingRight="@dimen/space10"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/textfont14" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/yuan"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/textfont14" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space10"
                        android:layout_marginLeft="@dimen/space10"
                        android:layout_marginTop="@dimen/space10"
                        android:text="@string/count_tip"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/textfont11" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space40"
                        android:background="@drawable/bg_input_white"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/space10"
                        android:paddingRight="@dimen/space10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/count_item_name"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/textfont14" />

                        <EditText
                            android:id="@+id/et_count"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="right|center_vertical"
                            android:hint="@string/count_item_hint"
                            android:inputType="number"
                            android:paddingLeft="@dimen/space10"
                            android:paddingRight="@dimen/space10"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/textfont14" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/quantity"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/textfont14" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_scope"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space10"
                        android:layout_marginLeft="@dimen/space10"
                        android:layout_marginTop="@dimen/space10"
                        android:text="@string/scope_tip"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/textfont11" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space40"
                        android:background="@drawable/bg_input_white"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/space10"
                        android:paddingRight="@dimen/space10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/scope_item_name"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/textfont14" />

                        <TextView
                            android:id="@+id/tv_scope"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="right|center_vertical"
                            android:paddingLeft="@dimen/space10"
                            android:paddingRight="@dimen/space10"
                            android:text="@string/scope_item_hint"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/textfont14" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_arrow_right" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space10"
                        android:layout_marginLeft="@dimen/space10"
                        android:layout_marginTop="@dimen/space10"
                        android:text="@string/location_tip"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/textfont11" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space40"
                        android:background="@drawable/bg_input_white"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/space10"
                        android:paddingRight="@dimen/space10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/location_name"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/textfont14" />

                        <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="right|center_vertical"
                            android:paddingLeft="@dimen/space10"
                            android:paddingRight="@dimen/space10"
                            android:text="@string/location_item_hint"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/textfont14" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_arrow_right" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/space10"
                    android:layout_marginTop="@dimen/space10"
                    android:text="@string/pack_up"
                    android:textColor="@color/text_blue"
                    android:textSize="@dimen/textfont14" />

                <LinearLayout
                    android:id="@+id/lin_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space40"
                        android:background="@drawable/bg_input_white"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/space10"
                        android:paddingRight="@dimen/space10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/more_item_name"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/textfont14" />

                        <EditText
                            android:id="@+id/et_link_name"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="right|center_vertical"
                            android:hint="@string/pls_input_link_name"
                            android:paddingLeft="@dimen/space10"
                            android:paddingRight="@dimen/space10"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/textfont14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space40"
                        android:layout_marginTop="@dimen/space20"
                        android:background="@drawable/bg_input_white"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/space10"
                        android:paddingRight="@dimen/space10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/more_item_url"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/textfont14" />

                        <EditText
                            android:id="@+id/et_link_url"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="right|center_vertical"
                            android:hint="@string/link_item_hint"
                            android:paddingLeft="@dimen/space10"
                            android:paddingRight="@dimen/space10"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/textfont14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space40"
                        android:layout_marginTop="@dimen/space20"
                        android:background="@drawable/bg_input_white"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/space10"
                        android:paddingRight="@dimen/space10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/more_item_wechat"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/textfont14" />

                        <EditText
                            android:id="@+id/et_link_wechat"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="right|center_vertical"
                            android:hint="@string/pls_input_wechat"
                            android:paddingLeft="@dimen/space10"
                            android:paddingRight="@dimen/space10"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/textfont14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space40"
                        android:layout_marginTop="@dimen/space20"
                        android:background="@drawable/bg_input_white"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/space10"
                        android:paddingRight="@dimen/space10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/more_item_weibo"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/textfont14" />

                        <EditText
                            android:id="@+id/et_link_weibo"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="right|center_vertical"
                            android:hint="@string/pls_input_weibo"
                            android:paddingLeft="@dimen/space10"
                            android:paddingRight="@dimen/space10"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/textfont14" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/space30"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/cb_save_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableLeft="@drawable/ic_check_selector"
                        android:drawablePadding="@dimen/space10"
                        android:padding="@dimen/space3"
                        android:text="@string/save_random_temp"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/textfont13" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <CheckBox
                            android:id="@+id/cb_obey_rule"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:drawableLeft="@drawable/ic_check_selector"
                            android:drawablePadding="@dimen/space10"
                            android:padding="@dimen/space3"
                            android:text="@string/tip_obey_rule"
                            android:textColor="@color/text_gray"
                            android:textSize="@dimen/textfont13" />

                        <TextView
                            android:id="@+id/tv_rule"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/redbag_rule"
                            android:textColor="@color/text_blue"
                            android:textSize="@dimen/textfont14" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_add"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space45"
                    android:layout_marginTop="@dimen/space15"
                    android:background="@drawable/bg_btn_red"
                    android:text="@string/add_money_to_redbag"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/textfont15" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>