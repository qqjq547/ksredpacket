<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
   <include layout="@layout/layout_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space45"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space15">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textfont14"
                android:text="@string/received_person_name"/>
            <EditText
                android:id="@+id/et_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="@dimen/space15"
                android:paddingRight="@dimen/space15"
                android:gravity="right|center_vertical"
                android:background="@color/transparent"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textfont14"
                android:hint="@string/input_received_person_name"/>
        </LinearLayout>
        <include layout="@layout/layout_divide_deep_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space45"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space15">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textfont14"
                android:text="@string/phone_number"/>
            <EditText
                android:id="@+id/et_mobile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="@dimen/space15"
                android:paddingRight="@dimen/space15"
                android:gravity="right|center_vertical"
                android:background="@color/transparent"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textfont14"
                android:hint="@string/input_phone_number"/>
        </LinearLayout>
        <include layout="@layout/layout_divide_deep_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space45"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space15">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textfont14"
                android:text="@string/locate_area"/>
            <TextView
                android:id="@+id/tv_area"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="@dimen/space15"
                android:paddingRight="@dimen/space15"
                android:drawablePadding="@dimen/space5"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="right|center_vertical"
                android:background="@color/transparent"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textfont14"
                android:hint="@string/pls_select_area"/>
        </LinearLayout>
        <include layout="@layout/layout_divide_deep_line"/>
        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space80"
            android:background="@color/transparent"
            android:gravity="start"
            android:paddingLeft="@dimen/space15"
            android:paddingRight="@dimen/space15"
            android:paddingTop="@dimen/space10"
            android:paddingBottom="@dimen/space10"
            android:textSize="@dimen/textfont14"
            android:textColor="@color/text_black"
            android:hint="@string/address_hint"
            />
        <include layout="@layout/layout_divide_deep_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/layout_divide_deep_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space45"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space15">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/textfont14"
                    android:text="@string/setup_default_address"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <CheckBox
                    android:id="@+id/cb_default"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:button="@drawable/bg_check_green_selector"
                    android:paddingLeft="@dimen/space15"
                    android:gravity="right|center_vertical" />
            </LinearLayout>
            <include layout="@layout/layout_divide_deep_line"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space30"
            android:layout_marginBottom="@dimen/space15">
        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="0dp"
            android:layout_height="@dimen/space45"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="@dimen/space50"
            android:layout_marginLeft="@dimen/space15"
            android:layout_marginRight="@dimen/space15"
            android:background="@drawable/bg_btn_gray"
            android:textSize="@dimen/textfont15"
            android:textColor="@color/text_white"
            android:text="@string/delete"/>
        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/space45"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="@dimen/space50"
            android:layout_marginLeft="@dimen/space15"
            android:layout_marginRight="@dimen/space15"
            android:background="@drawable/bg_btn_red"
            android:textSize="@dimen/textfont15"
            android:textColor="@color/text_white"
            android:text="@string/confirm"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>