<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/ll_header_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/space15"
    android:paddingRight="@dimen/space15"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space15"
        android:text="问题"
        android:textColor="#000000"
        android:textSize="@dimen/space18" />


    <EditText
        android:id="@+id/et_input_problem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space15"
        android:background="@drawable/bg_gray_rect_line_shap"
        android:gravity="top"
        android:hint="请输入问题"
        android:maxLength="50"
        android:minHeight="58dp"
        android:padding="@dimen/space10"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space16"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类型"
            android:textSize="@dimen/sp_16" />

        <RadioGroup
            android:id="@+id/rg_problem_type"
            android:layout_marginLeft="@dimen/space20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_single_select"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:textColor="#000000"
                android:textSize="@dimen/sp_14"
                android:checked="false"
                android:drawableLeft="@drawable/select_problem_type"
                android:button="@null"
                android:text="单选题"/>

            <RadioButton
                android:id="@+id/rb_many_select"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/select_problem_type"
                android:button="@null"
                android:checked="false"
                android:textColor="#000000"
                android:textSize="@dimen/sp_14"
                android:text="多选题"/>

            <RadioButton
                android:id="@+id/eb_fill_in_blanks"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:checked="false"
                android:drawableLeft="@drawable/select_problem_type"
                android:button="@null"
                android:textColor="#000000"
                android:textSize="@dimen/sp_14"
                android:text="填空题"/>



        </RadioGroup>


    </LinearLayout>


</LinearLayout>