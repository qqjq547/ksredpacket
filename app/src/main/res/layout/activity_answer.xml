<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<include layout="@layout/layout_title"/>
    <TextView
        android:id="@+id/tv_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_red"
        android:textSize="@dimen/textfont14"
        android:textColor="@color/text_white"
        android:text="@string/this_redbag_has_robe"
        android:padding="@dimen/space5"
        android:visibility="gone"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_answer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false">
            </android.support.v7.widget.RecyclerView>
            <Button
                android:id="@+id/btn_open"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space45"
                android:layout_marginTop="@dimen/space30"
                android:layout_marginLeft="@dimen/space15"
                android:layout_marginRight="@dimen/textfont15"
                android:layout_marginBottom="@dimen/space40"
                android:background="@drawable/bg_btn_red"
                android:textColor="@color/text_white"
                android:textSize="@dimen/textfont14"
                android:text="@string/open_redbag"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>