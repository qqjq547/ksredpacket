<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_block"
    android:orientation="horizontal"
    android:padding="@dimen/space15">

    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="@dimen/space24"
        android:layout_height="@dimen/space24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/space6"
        android:layout_marginTop="@dimen/space6"
        android:layout_marginBottom="@dimen/space6">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/space14" />

        <TextView
            android:id="@+id/tv_reply"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/reply"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/space14" />
    </LinearLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="@dimen/space8"
            android:textColor="@color/text_drak_black"
            android:textSize="@dimen/textfont13" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_child_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>