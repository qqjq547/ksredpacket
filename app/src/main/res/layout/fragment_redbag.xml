<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/lin_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:background="@color/bg_title">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height">

      <TextView
          android:id="@+id/tv_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:drawableLeft="@drawable/ic_ksb"
          android:drawablePadding="@dimen/space8"
          android:textColor="@color/text_black"
          android:textSize="@dimen/textfont18" />
      <TextView
          android:id="@+id/tv_text"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:paddingLeft="@dimen/space15"
          android:paddingRight="@dimen/space15"
          android:gravity="center"
          android:layout_alignParentRight="true"
          android:textColor="@color/text_black"
          android:textSize="@dimen/textfont14" />
    </RelativeLayout>
    <include layout="@layout/layout_divide_deep_line"/>
  </LinearLayout>
  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/mv_redbag"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.baidu.mapapi.map.MapView>

    <LinearLayout
        android:id="@+id/lin_fl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/space30">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/lin_city_owner"
            android:layout_width="@dimen/space113"
            android:layout_height="@dimen/space36"
            android:layout_marginTop="@dimen/space12"
            android:paddingLeft="@dimen/space15"
            android:paddingRight="@dimen/space15"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/bg_home_white_left">
            <View
                android:layout_width="@dimen/space30"
                android:layout_height="@dimen/space30"/>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/city_owner"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textfont12" />
            <TextView
                android:id="@+id/tv_city_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space4"
                android:ellipsize="end"
                android:lines="1"
                android:paddingLeft="@dimen/space5"
                android:paddingRight="@dimen/space5"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textfont9" />
          </LinearLayout>

        </LinearLayout>
            <FrameLayout
                android:layout_width="@dimen/space30"
                android:layout_height="@dimen/space48"
                android:layout_marginLeft="@dimen/space15"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="17dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_crown"/>
                <ImageView
                    android:id="@+id/iv_city_owner_avatar"
                    android:layout_width="@dimen/space30"
                    android:layout_height="@dimen/space30"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/space3"/>
            </FrameLayout>
        </FrameLayout>
      <Space
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/lin_upgrade_agent"
            android:layout_width="@dimen/space113"
            android:layout_height="@dimen/space36"
            android:layout_marginTop="@dimen/space12"
            android:gravity="center"
            android:background="@drawable/bg_home_white_right"
            android:visibility="gone">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_upgrade_agent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space9"
                android:gravity="center"
                android:text="@string/upgrade_agent"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textfont12" />
        </LinearLayout>

    </LinearLayout>
    <ImageView
      android:id="@+id/tv_start"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal|bottom"
      android:layout_marginBottom="@dimen/space28"
      android:src="@drawable/ic_redbag_edit"/>
    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="@dimen/space60"
        android:layout_marginRight="@dimen/space15"
        android:padding="@dimen/space15"
        android:src="@drawable/ic_home_share"
        android:background="@drawable/ic_redbag_refresh"/>
      <ImageView
          android:id="@+id/iv_refresh"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="right|bottom"
          android:layout_marginBottom="@dimen/space12"
          android:layout_marginRight="@dimen/space15"
          android:src="@drawable/ic_redbag_refresh"/>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">
          <LinearLayout
              android:id="@+id/lin_notice"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/bg_trans_white"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/space15"
              android:paddingTop="@dimen/space4"
              android:paddingRight="@dimen/space15"
              android:paddingBottom="@dimen/space4">

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:layout_marginRight="@dimen/space4"
                  android:src="@drawable/ic_redbag_notice" />

              <com.guochuang.mimedia.view.ScrollTextView
                  android:id="@+id/stv_notice"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:ellipsize="marquee"
                  android:marqueeRepeatLimit="marquee_forever"
                  android:singleLine="true"
                  android:textColor="@color/text_notice"
                  android:textSize="@dimen/textfont14" />
          </LinearLayout>
          <com.guochuang.mimedia.view.HoneyCombView
              android:id="@+id/hcv_ad"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:visibility="gone">
          </com.guochuang.mimedia.view.HoneyCombView>

      </LinearLayout>
  </FrameLayout>
</LinearLayout>