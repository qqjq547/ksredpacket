<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">
<include layout="@layout/layout_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bg_white"
        android:focusable="true"
        android:focusableInTouchMode="true">
    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space85"
        android:background="@null"
        android:paddingLeft="@dimen/space15"
        android:paddingRight="@dimen/space15"
        android:paddingTop="@dimen/space10"
        android:paddingBottom="@dimen/space10"
        android:gravity="start"
        android:textSize="@dimen/textfont14"
        android:textColor="@color/text_black"
        android:hint="@string/advise_feedback_hint"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_pic"/>

    </LinearLayout>
        <TextView
            android:id="@+id/tv_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/space10"
            android:layout_marginTop="@dimen/space10"
            android:text="@string/more"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/textfont14" />

        <LinearLayout
            android:id="@+id/lin_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space15"
            android:layout_marginRight="@dimen/space15"
            android:orientation="vertical"
            android:background="@color/bg_gray"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space40"
                android:background="@drawable/bg_input_white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space10"
                android:paddingRight="@dimen/space10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/more_item_name"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/textfont14" />

                <EditText
                    android:id="@+id/et_link_name"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:lines="1"
                    android:gravity="right|center_vertical"
                    android:hint="@string/pls_input_link_name"
                    android:paddingLeft="@dimen/space10"
                    android:paddingRight="@dimen/space10"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/textfont14" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space40"
                android:layout_marginTop="@dimen/space20"
                android:background="@drawable/bg_input_white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space10"
                android:paddingRight="@dimen/space10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/more_item_url"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/textfont14" />

                <EditText
                    android:id="@+id/et_link_url"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:lines="1"
                    android:gravity="right|center_vertical"
                    android:hint="@string/link_item_hint"
                    android:paddingLeft="@dimen/space10"
                    android:paddingRight="@dimen/space10"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/textfont14" />
            </LinearLayout>
        </LinearLayout>
     <TextView
         android:id="@+id/tv_confirm"
         android:layout_width="match_parent"
         android:layout_height="@dimen/space45"
         android:layout_marginTop="@dimen/space50"
         android:layout_marginBottom="@dimen/space40"
         android:layout_marginLeft="@dimen/space15"
         android:layout_marginRight="@dimen/space15"
         android:background="@drawable/bg_btn_red"
         android:gravity="center"
         android:textColor="@color/text_white"
         android:textSize="@dimen/textfont15"
         android:text="@string/confirm"/>

</LinearLayout>