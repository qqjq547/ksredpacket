<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/space30">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/space10"
    android:padding="@dimen/space15"
    android:background="@drawable/bg_dialog_node">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/text_mall"
          android:textSize="@dimen/textfont14"
          android:text="竞拍出价"/>
      <EditText
          android:id="@+id/et_bid_price"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:textSize="@dimen/textfont12"
          android:background="@color/transparent"
          android:textColor="@color/text_white"
          android:padding="@dimen/space15"
          android:inputType="number"
          android:gravity="right"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/text_mall_gold"
          android:textSize="@dimen/textfont16"
          android:textStyle="bold"
          android:text="@string/money_unit_qc"/>
  </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space2"
        android:background="#75D6FF"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_mall"
            android:textSize="@dimen/textfont14"
            android:text="我的QC"/>
        <TextView
            android:id="@+id/tv_my_qc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/textfont12"
            android:textColor="@color/text_mall_gold"
            android:padding="@dimen/space15"
            android:gravity="right"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_mall_gold"
            android:textSize="@dimen/textfont16"
            android:textStyle="bold"
            android:text="@string/money_unit_qc"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space2"
        android:background="#75D6FF"/>
    <CheckBox
        android:id="@+id/cb_agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space25"
        android:layout_marginBottom="@dimen/space20"
        android:button="@null"
        android:drawablePadding="@dimen/space6"
        android:drawableLeft="@drawable/bid_agree_selector"
        android:textSize="@dimen/textfont13"
        android:textColor="@color/text_mall"
        android:text="我已阅读并同意节点竞购协议"/>
    <ImageButton
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/space10"
        android:src="@drawable/bg_btn_bid"
        android:background="@drawable/bg_mall_btn"/>

</LinearLayout>
    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@drawable/bg_btn_close"/>
</FrameLayout>