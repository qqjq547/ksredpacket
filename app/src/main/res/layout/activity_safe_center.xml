<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space15"
            android:background="@color/bg_white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lin_identity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space45"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space15"
                android:paddingRight="@dimen/space15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/identification"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/textfont14" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_identity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/space10"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/textfont14" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_h"
                android:layout_marginLeft="@dimen/space15"
                android:layout_marginRight="@dimen/space15"
                android:background="@color/bg_divide" />

            <LinearLayout
                android:id="@+id/lin_my_weixin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space45"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space15"
                android:paddingRight="@dimen/space15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_weixin"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/textfont14" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_my_weixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/space10"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/textfont14" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_h"
                android:layout_marginLeft="@dimen/space15"
                android:layout_marginRight="@dimen/space15"
                android:background="@color/bg_divide" />

            <LinearLayout
                android:id="@+id/lin_my_zfb"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space45"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space15"
                android:paddingRight="@dimen/space15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_zfb"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/textfont14" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_my_zfb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/space10"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/textfont14" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_h"
                android:layout_marginLeft="@dimen/space15"
                android:layout_marginRight="@dimen/space15"
                android:background="@color/bg_divide" />

            <LinearLayout
                android:id="@+id/lin_my_bankcard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space45"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space15"
                android:paddingRight="@dimen/space15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_bankcard"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/textfont14" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_my_bankcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/space10"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/textfont14" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space15"
            android:background="@color/bg_white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lin_login_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space45"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space15"
                android:paddingRight="@dimen/space15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_pwd"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/textfont14" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/space10"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/textfont14" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_h"
                android:layout_marginLeft="@dimen/space15"
                android:layout_marginRight="@dimen/space15"
                android:background="@color/bg_divide" />

            <LinearLayout
                android:id="@+id/lin_trade_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space45"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space15"
                android:paddingRight="@dimen/space15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trade_pwd"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/textfont14" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/space10"
                    android:drawableRight="@drawable/ic_arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_h"
                android:layout_marginLeft="@dimen/space15"
                android:layout_marginRight="@dimen/space15"
                android:visibility="gone"
                android:background="@color/bg_divide" />

            <LinearLayout
                android:id="@+id/lin_finger_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space45"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space15"
                android:paddingRight="@dimen/space15"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/finger_pwd"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/textfont14" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <CheckBox
                    android:id="@+id/cb_finger_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/bg_check_green_selector" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_h"
                android:layout_marginLeft="@dimen/space15"
                android:layout_marginRight="@dimen/space15"
                android:visibility="gone"
                android:background="@color/bg_divide" />

            <LinearLayout
                android:id="@+id/lin_gesture_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space45"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space15"
                android:paddingRight="@dimen/space15"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gesture_pwd"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/textfont14" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <CheckBox
                    android:id="@+id/cb_gesture_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/bg_check_green_selector" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_h"
                android:layout_marginLeft="@dimen/space15"
                android:layout_marginRight="@dimen/space15"
                android:visibility="gone"
                android:background="@color/bg_divide" />

            <LinearLayout
                android:id="@+id/lin_update_gesture_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space45"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space15"
                android:paddingRight="@dimen/space15"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/update_gesture_pwd"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/textfont14" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/space10"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/textfont14" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>