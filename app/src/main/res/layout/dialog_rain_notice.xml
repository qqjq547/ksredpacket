<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="350dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_rain_notice">
   <View
       android:layout_width="match_parent"
       android:layout_height="200dp" />
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="3"
       android:layout_marginLeft="@dimen/space65"
       android:layout_marginRight="@dimen/space65"
       android:orientation="vertical">
      <TextView
          android:id="@+id/tv_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:lines="1"
          android:gravity="center"
          android:ellipsize="end"
          android:textSize="@dimen/textfont18"
          android:textColor="@color/text_white"
          android:textStyle="bold" />
      <TextView
          android:id="@+id/tv_summary"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center|start"
          android:layout_marginTop="@dimen/space15"
          android:textSize="@dimen/textfont14"
          android:textColor="@color/text_white" />
      <Space
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"/>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/space30">
         <TextView
             android:id="@+id/tv_cancel"
             android:layout_width="0dp"
             android:layout_height="@dimen/space24"
             android:layout_weight="1"
             android:gravity="center"
             android:background="@drawable/bg_btn_rain"
             android:textColor="@color/text_rain_red"
             android:textSize="@dimen/textfont12"
             android:text="@string/stand_not_get"/>
         <TextView
             android:id="@+id/tv_start"
             android:layout_width="0dp"
             android:layout_height="@dimen/space24"
             android:layout_weight="1"
             android:gravity="center"
             android:layout_marginLeft="@dimen/space30"
             android:background="@drawable/bg_btn_rain"
             android:textColor="@color/text_rain_red"
             android:textSize="@dimen/textfont12"
             android:text="@string/down_red_rain"/>
      </LinearLayout>
   </LinearLayout>
</LinearLayout>
