<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/space5"
    android:layout_marginRight="@dimen/space10"
    android:layout_marginTop="@dimen/space5"
    android:background="@drawable/bg_white_block"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="@dimen/space0"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_drak_black"
            android:textSize="@dimen/textfont14"
            android:text=""/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_poundage"
        android:layout_width="@dimen/space0"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/text_drak_black"
        android:textSize="@dimen/textfont14" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="@dimen/space0"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space17"
        android:layout_marginTop="@dimen/space17"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/text_drak_black"
        android:textSize="@dimen/textfont14" />
    <FrameLayout
        android:layout_width="@dimen/space0"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    <TextView
        android:id="@+id/tv_state"
        android:layout_width="@dimen/space0"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/text_drak_black"
        android:textSize="@dimen/textfont14" />
        <ImageView
            android:id="@+id/iv_tip"
            android:layout_width="@dimen/space20"
            android:layout_height="@dimen/space20"
            android:layout_marginRight="@dimen/space15"
            android:src="@drawable/ic_tip_remark"
            android:layout_gravity="center_vertical|right"/>
    </FrameLayout>
</LinearLayout>