<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
  <include layout="@layout/layout_title"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_recommend_banner"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-40dp"
            android:layout_marginLeft="@dimen/space15"
            android:layout_marginRight="@dimen/space15"
            android:padding="@dimen/space10"
            android:background="@drawable/bg_white_block">
            <LinearLayout
                android:id="@+id/lin_fans"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="@dimen/space10"
                android:paddingRight="@dimen/space10"
                android:paddingTop="@dimen/space24"
                android:paddingBottom="@dimen/space24"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textfont16"
                    android:textColor="@color/text_black"
                    android:text="@string/fans"/>
                <TextView
                    android:id="@+id/tv_fans_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space25"
                    android:textSize="@dimen/textfont18"
                    android:textStyle="bold"
                    android:textColor="@color/text_black" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lin_share_benefit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="@dimen/space10"
                android:paddingRight="@dimen/space10"
                android:paddingTop="@dimen/space24"
                android:paddingBottom="@dimen/space24"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textfont16"
                    android:textColor="@color/text_black"
                    android:text="@string/share_benefit"/>
                <TextView
                    android:id="@+id/tv_share_benefit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space25"
                    android:textSize="@dimen/textfont18"
                    android:textStyle="bold"
                    android:textColor="@color/text_black" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lin_equal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="@dimen/space10"
                android:paddingRight="@dimen/space10"
                android:paddingTop="@dimen/space24"
                android:paddingBottom="@dimen/space24"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textfont16"
                    android:textColor="@color/text_gray_drak"
                    android:text="@string/equal_value"/>
                <TextView
                    android:id="@+id/tv_equal_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space25"
                    android:textSize="@dimen/textfont18"
                    android:textStyle="bold"
                    android:textColor="@color/text_gray_drak" />
            </LinearLayout>
        </LinearLayout>
        <WebView
            android:id="@+id/wv_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space10"
            android:layout_marginTop="@dimen/space10"
            android:layout_marginLeft="@dimen/space10"
            android:layout_marginRight="@dimen/space10">
        </WebView>
        <Button
            android:id="@+id/btn_start"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/space250"
            android:layout_height="@dimen/space45"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space30"
            android:layout_marginBottom="@dimen/space45"
            android:background="@drawable/bg_btn_red"
            android:textColor="@color/text_white"
            android:textSize="@dimen/textfont15"
            android:text="@string/start_recommend"/>
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>