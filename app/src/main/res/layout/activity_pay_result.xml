<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
 <include layout="@layout/layout_title"/>
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical"
     android:background="@color/bg_theme">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:orientation="vertical"
         android:paddingTop="@dimen/space40"
         android:paddingBottom="@dimen/space40">
         <ImageView
             android:layout_width="@dimen/space60"
             android:layout_height="@dimen/space60"
             android:src="@drawable/ic_pay_success"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/space15"
             android:textColor="@color/text_black"
             android:textSize="@dimen/textfont18"
             android:text="@string/pay_result_success"/>
     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_marginLeft="@dimen/space10"
         android:layout_marginRight="@dimen/space10"
         android:padding="@dimen/space10"
         android:background="@drawable/bg_white_block">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingLeft="@dimen/space10"
             android:paddingRight="@dimen/space10">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_vertical"
                 android:textSize="@dimen/textfont14"
                 android:textColor="@color/text_black"
                 android:text="@string/payee_user"/>
             <Space
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"/>
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="center_horizontal"
                 android:orientation="vertical"
                 android:paddingTop="@dimen/space15"
                 android:paddingBottom="@dimen/space15">
                 <ImageView
                     android:id="@+id/iv_avatar"
                     android:layout_width="@dimen/space40"
                     android:layout_height="@dimen/space40" />
                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="@dimen/space10">
                     <TextView
                         android:id="@+id/tv_nickname"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textColor="@color/text_black"
                         android:textSize="@dimen/textfont14"/>
                     <TextView
                         android:id="@+id/tv_realname"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="@dimen/space10"
                         android:textColor="@color/text_gray"
                         android:textSize="@dimen/textfont14"/>
                 </LinearLayout>

             </LinearLayout>
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingLeft="@dimen/space10"
             android:paddingRight="@dimen/space10">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_vertical"
                 android:textSize="@dimen/textfont14"
                 android:textColor="@color/text_black"
                 android:text="@string/payment_amount"/>
             <Space
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"/>
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="right"
                 android:orientation="vertical"
                 android:paddingTop="@dimen/space15"
                 android:paddingBottom="@dimen/space25">
                 <TextView
                     android:id="@+id/tv_money"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="@dimen/textfont20"
                     android:textColor="@color/text_black"/>
                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="@dimen/space10">
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textColor="@color/text_gray"
                         android:textSize="@dimen/textfont14"
                         android:text="@string/equal_value"/>
                     <TextView
                         android:id="@+id/tv_ksb"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="@dimen/space10"
                         android:textColor="@color/text_black"
                         android:textSize="@dimen/textfont14"/>
                 </LinearLayout>

             </LinearLayout>
         </LinearLayout>
     </LinearLayout>
     <ImageView
         android:id="@+id/iv_banner"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="@dimen/space15"
         android:layout_marginRight="@dimen/space15"
         android:scaleType="fitXY"
         android:adjustViewBounds="true" />
 </LinearLayout>
</LinearLayout>