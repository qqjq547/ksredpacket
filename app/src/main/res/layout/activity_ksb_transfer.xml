<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <include layout="@layout/layout_title_text" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space10"

                android:background="@color/bg_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/my_ksb_ksb_transfer_my"
                        android:textColor="@color/text_drak_black"
                        android:textSize="@dimen/textfont14" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_ksb_ksb_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/text_city_yellow"
                            android:textSize="@dimen/textfont16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/space5"
                            android:text="@string/ksb"
                            android:textColor="@color/text_drak_black"
                            android:textSize="@dimen/textfont14" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    style="@style/bottom_line"
                    android:layout_marginLeft="@dimen/space15"
                    android:layout_marginRight="@dimen/space15" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/my_ksb_ksb_transfer_equivalence"
                        android:textColor="@color/text_drak_black"
                        android:textSize="@dimen/textfont14" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_ksb_price_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/text_city_yellow"
                            android:textSize="@dimen/textfont16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/space5"
                            android:text="@string/yuan"
                            android:textColor="@color/text_drak_black"
                            android:textSize="@dimen/textfont14" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space10"
                android:background="@color/bg_white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/space15"
                    android:text="@string/my_ksb_ksb_transfer_price_title"
                    android:textColor="@color/text_drak_black"
                    android:textSize="@dimen/textfont14" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/space15"
                    android:paddingLeft="@dimen/space15"
                    android:paddingRight="@dimen/space15">

                    <TextView
                        android:id="@+id/tv_rmb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rmb"
                        android:textSize="@dimen/textfont28" />

                    <EditText
                        android:id="@+id/et_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tv_rmb"
                        android:layout_alignTop="@+id/tv_rmb"
                        android:layout_marginLeft="@dimen/space5"
                        android:layout_toLeftOf="@+id/tv_transfer_all"
                        android:layout_toRightOf="@+id/tv_rmb"
                        android:background="@null"
                        android:gravity="bottom"
                        android:hint="@string/my_ksb_ksb_transfer_price_hint"
                        android:inputType="numberDecimal"
                        android:textColor="@color/text_drak_black"
                        android:textColorHint="@color/text_gray"
                        android:textSize="@dimen/textfont28" />

                    <TextView
                        android:id="@+id/tv_transfer_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tv_rmb"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="@dimen/space10"
                        android:paddingTop="@dimen/space10"
                        android:text="@string/my_ksb_ksb_transfer_price_all"
                        android:textColor="@color/text_blue"
                        android:textSize="@dimen/textfont12" />
                </RelativeLayout>

                <View
                    style="@style/bottom_line"
                    android:layout_marginLeft="@dimen/space15"
                    android:layout_marginRight="@dimen/space15" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/my_ksb_ksb_transfer_ksb_equivalence"
                        android:textColor="@color/text_drak_black"
                        android:textSize="@dimen/textfont14" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_ksb_equivalence"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/text_city_yellow"
                            android:textSize="@dimen/textfont16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/space5"
                            android:text="@string/ksb"
                            android:textColor="@color/text_drak_black"
                            android:textSize="@dimen/textfont14" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    style="@style/bottom_line"
                    android:layout_marginLeft="@dimen/space15"
                    android:layout_marginRight="@dimen/space15" />

                <RelativeLayout
                    android:id="@+id/ll_channel_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/space15">

                    <ImageView
                        android:id="@+id/iv_channel_header"
                        android:layout_width="@dimen/space33"
                        android:layout_height="@dimen/space33"
                        android:layout_centerVertical="true" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space10"
                        android:layout_toRightOf="@+id/iv_channel_header"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_drak_black"
                            android:textSize="@dimen/textfont14" />

                        <TextView
                            android:id="@+id/tv_user_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space5"
                            android:textColor="@color/text_drak_black"
                            android:textSize="@dimen/textfont14" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_right_black_big" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_poundage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="@dimen/space15"
                android:orientation="horizontal"
                android:visibility="invisible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_ksb_trans_poundage"
                    android:textColor="@color/text_drak_black"
                    android:textSize="@dimen/textfont12" />

                <TextView
                    android:id="@+id/tv_poundage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_city_yellow"
                    android:textSize="@dimen/textfont14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yuan"
                    android:textColor="@color/text_drak_black"
                    android:textSize="@dimen/textfont12" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space15"
                android:background="@drawable/bg_btn_red"
                android:gravity="center"
                android:padding="@dimen/space15"
                android:text="@string/confirm"
                android:textColor="@color/text_white"
                android:textSize="@dimen/textfont15" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/space10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_ksb_ksb_transfer_get_time"
                    android:textColor="@color/text_drak_black"
                    android:textSize="@dimen/textfont12" />

                <TextView
                    android:id="@+id/tv_confirm_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zero"
                    android:textColor="@color/text_city_yellow"
                    android:textSize="@dimen/textfont14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time"
                    android:textColor="@color/text_drak_black"
                    android:textSize="@dimen/textfont12" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_confirm_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space15"
                android:layout_marginTop="@dimen/space25"
                android:lineSpacingExtra="@dimen/space10"
                android:textColor="@color/text_drak_black"
                android:textSize="@dimen/textfont12" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>