<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title"/>
   <RadioGroup
       android:id="@+id/rg_nav"
       android:layout_width="match_parent"
       android:layout_height="@dimen/space40"
       android:orientation="horizontal"
       android:background="@drawable/bg_income_nav"
       android:layout_marginLeft="@dimen/space15"
       android:layout_marginRight="@dimen/space15">
       <LinearLayout
           android:id="@+id/lin_type"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:gravity="center"
           android:background="@drawable/income_left_selector"
           android:visibility="gone">
           <TextView
               android:id="@+id/tv_type"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:drawablePadding="@dimen/space5"
               android:drawableRight="@drawable/ic_arrow_down_selector"
               android:textColor="@color/income_tab_text_selector"
               android:textSize="@dimen/textfont16"
               android:text="@string/income_type"/>
       </LinearLayout>
       <LinearLayout
           android:id="@+id/lin_time"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:gravity="center"
           android:background="@drawable/income_selector">
           <TextView
               android:id="@+id/tv_time"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:drawablePadding="@dimen/space5"
               android:drawableRight="@drawable/ic_arrow_down_selector"
               android:textColor="@color/income_tab_text_selector"
               android:textSize="@dimen/textfont16"
               android:text="@string/recent_seven_day"/>
       </LinearLayout>
   </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space10"
        android:layout_marginBottom="@dimen/space10"
        android:layout_marginLeft="@dimen/space15"
        android:layout_marginRight="@dimen/space15"
        android:padding="@dimen/space10"
        android:background="@drawable/bg_white_block">
        <LinearLayout
            android:id="@+id/lin_total_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="@dimen/space10"
            android:paddingRight="@dimen/space10"
            android:paddingTop="@dimen/space24"
            android:paddingBottom="@dimen/space24"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textfont16"
                android:textColor="@color/text_black"
                android:text="@string/user_total_count"/>
            <TextView
                android:id="@+id/tv_total_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space20"
                android:textSize="@dimen/textfont18"
                android:textStyle="bold"
                android:textColor="@color/text_black" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_today_increase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="@dimen/space10"
            android:paddingRight="@dimen/space10"
            android:paddingTop="@dimen/space24"
            android:paddingBottom="@dimen/space24"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textfont16"
                android:textColor="@color/text_black"
                android:text="@string/today_increase"/>
            <TextView
                android:id="@+id/tv_today_increase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space20"
                android:textSize="@dimen/textfont18"
                android:textStyle="bold"
                android:textColor="@color/text_black" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_yesterday_increase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="@dimen/space10"
            android:paddingRight="@dimen/space10"
            android:paddingTop="@dimen/space24"
            android:paddingBottom="@dimen/space24"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textfont16"
                android:textColor="@color/text_gray_drak"
                android:text="@string/yesterday_increase"/>
            <TextView
                android:id="@+id/tv_yesterday_increase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space20"
                android:textSize="@dimen/textfont18"
                android:textStyle="bold"
                android:textColor="@color/text_gray_drak" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:layout_marginLeft="@dimen/space15"
        android:layout_marginTop="@dimen/space20"
        android:layout_marginRight="@dimen/space15"
        android:background="@drawable/bg_myksb_trend"
        android:orientation="vertical">
        <lecho.lib.hellocharts.view.LineChartView
            android:id="@+id/linechart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/space10"
            android:nestedScrollingEnabled="false" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space15"
        android:layout_marginRight="@dimen/space15"
        android:layout_marginTop="@dimen/space10">
        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textfont14"
            android:textColor="@color/text_black" />
        <TextView
            android:id="@+id/tv_increase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space10"
            android:drawableLeft="@drawable/bg_dot_increase"
            android:textSize="@dimen/textfont14"
            android:textColor="@color/text_black" />
        <TextView
            android:id="@+id/tv_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space10"
            android:drawableLeft="@drawable/bg_dot_active"
            android:textSize="@dimen/textfont14"
            android:textColor="@color/text_black" />
    </LinearLayout>
</LinearLayout>