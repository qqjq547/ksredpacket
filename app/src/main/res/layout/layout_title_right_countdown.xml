<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_title"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/title_height"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_centerInParent="true"
            android:textColor="@color/text_black"
            android:textSize="@dimen/textfont18" />

        <com.guochuang.mimedia.view.CountDownView
            android:id="@+id/count_down_view"
            android:layout_marginRight="@dimen/space15"
            android:layout_width="@dimen/space60"
            android:layout_height="@dimen/space30"
            android:textColor="@color/text_white"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="#22222222"
            android:textSize="@dimen/sp_16"/>

    </RelativeLayout>

    <include layout="@layout/layout_divide_deep_line" />
</LinearLayout>