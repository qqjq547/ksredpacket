<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<include layout="@layout/layout_title"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/space15"
        android:layout_marginRight="@dimen/space15"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:layout_gravity="bottom"
            android:scaleType="fitXY"
            android:src="@drawable/bg_joined_bottom" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/srl_refresh"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
               <FrameLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_marginTop="@dimen/space65"
                       android:scaleType="fitXY"
                       android:src="@drawable/bg_joined_list" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_avatar"
                        android:layout_width="@dimen/space60"
                        android:layout_height="@dimen/space60"
                        android:layout_marginTop="@dimen/space40" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space15">

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/textfont14" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/tv_area"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/space10"
                                android:background="@drawable/bg_area"
                                android:gravity="center"
                                android:textColor="@color/text_white"
                                android:textSize="@dimen/textfont8" />
                        </LinearLayout>
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/rl_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/space3">

                        <TextView
                            android:id="@+id/tv_coin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/ll_red_packet_details_money"
                            android:layout_centerHorizontal="true"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/textfont30" />

                        <LinearLayout
                            android:id="@+id/ll_red_packet_details_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space10"
                            android:layout_toRightOf="@+id/tv_coin"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_red_packet_details_money"
                                android:ellipsize="end"
                                android:lines="1"
                                android:paddingBottom="@dimen/space4"
                                android:paddingLeft="@dimen/space10"
                                android:paddingRight="@dimen/space10"
                                android:paddingTop="@dimen/space4"
                                android:textColor="@color/text_white"
                                android:textSize="@dimen/textfont10" />

                            <TextView
                                android:id="@+id/tv_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space8"
                                android:text="@string/money_unit_ksb"
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/textfont12" />
                        </LinearLayout>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space12"
                        android:text="@string/has_save_packet"
                        android:textColor="@color/text_blue"
                        android:textSize="@dimen/textfont14" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space15"
                        android:layout_marginRight="@dimen/space15"
                        android:layout_marginTop="@dimen/space30"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_has_get"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/space10"
                            android:textColor="@color/text_has_get_redbag"
                            android:textSize="@dimen/textfont12" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/divide_h"
                            android:background="@drawable/bg_divide_yellow" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_joined"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:nestedScrollingEnabled="false"></android.support.v7.widget.RecyclerView>
                    </LinearLayout>
                </LinearLayout>
               </FrameLayout>
            </android.support.v4.widget.NestedScrollView>
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/bg_joined_list_end"/>
        </LinearLayout>

    </FrameLayout>


</LinearLayout>