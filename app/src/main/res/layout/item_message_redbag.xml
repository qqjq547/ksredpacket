<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/space15" >
  <ImageView
      android:id="@+id/iv_avatar"
      android:layout_width="@dimen/space40"
      android:layout_height="@dimen/space40" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space15"
        android:layout_marginTop="@dimen/space10"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:maxLength="10"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textfont16"
                android:text=""/>
            <TextView
                android:id="@+id/tv_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space12"
                android:lines="1"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/textfont14" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_reply"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/space5"
                android:paddingRight="@dimen/space5"
                android:text="@string/reply"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/space14" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_reply_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space10"
            android:layout_marginBottom="@dimen/space10"
            android:textColor="@color/text_black"
            android:textSize="@dimen/textfont14"/>
        <LinearLayout
            android:id="@+id/lin_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space8">
            <ImageView
                android:id="@+id/iv_content_image"
                android:layout_width="@dimen/space100"
                android:layout_height="@dimen/space100"
                android:layout_marginRight="@dimen/space15"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_content_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/textfont13"
                android:textColor="@color/text_black"
                android:text=""/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space10"
            android:textSize="@dimen/textfont13"
            android:textColor="@color/text_gray"
            android:text=""/>
    </LinearLayout>
</LinearLayout>