<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/bg_trans_light">
    <LinearLayout
        android:id="@+id/lin_shake"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible">
   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/bg_lucky"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space20"
        android:textColor="@color/text_white"
        android:textSize="@dimen/textfont14"
        android:text="@string/shake_and_get_reward"/>
        <TextView
            android:id="@+id/tv_give_up"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space24"
            android:paddingLeft="@dimen/space17"
            android:paddingRight="@dimen/space17"
            android:gravity="center"
            android:layout_marginTop="@dimen/space30"
            android:background="@drawable/bg_btn_rain_result"
            android:textColor="@color/text_white"
            android:textSize="@dimen/textfont13"
            android:text="@string/give_up_reward"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textfont14"
            android:textColor="@color/text_white"
            android:text="@string/lucky_result_coin"/>
        <TextView
            android:id="@+id/tv_result_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textfont19"
            android:textColor="@color/text_rain_gold"
            android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space9">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textfont14"
                android:textColor="@color/text_white"
                android:text="@string/lucky_result_money"/>
        <TextView
            android:id="@+id/tv_result_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textfont19"
            android:textColor="@color/text_rain_gold"
            android:textStyle="bold"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space25"
            android:src="@drawable/bg_rain_gold"/>
        <TextView
            android:id="@+id/tv_know"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space24"
            android:paddingLeft="@dimen/space17"
            android:paddingRight="@dimen/space17"
            android:gravity="center"
            android:layout_marginTop="@dimen/space30"
            android:background="@drawable/bg_btn_rain_result"
            android:textColor="@color/text_white"
            android:textSize="@dimen/textfont13"
            android:text="@string/i_known"/>

    </LinearLayout>
</LinearLayout>