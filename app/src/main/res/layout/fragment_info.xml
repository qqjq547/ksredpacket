<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white">
    <LinearLayout
        android:id="@+id/lin_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bg_title">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height">

            <android.support.design.widget.TabLayout
                android:id="@+id/tl_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/space16"
                android:paddingRight="@dimen/space16"
                android:paddingTop="@dimen/space3"
                android:paddingBottom="@dimen/space3"
                app:layout_collapseMode="pin"
                app:tabMode="scrollable"
                app:layout_scrollFlags="scroll"
                app:tabIndicatorColor="@color/text_info_tab_select"
                app:tabIndicatorHeight="@dimen/space2"
                app:tabIndicatorFullWidth="false"
                app:tabPadding="@dimen/space5"
                app:tabSelectedTextColor="@color/text_info_tab_select"
                app:tabTextAppearance="@style/TabLayoutTextStyle"
                app:tabTextColor="@color/text_black">
            </android.support.design.widget.TabLayout>

        </LinearLayout>
        <include layout="@layout/layout_divide_deep_line"/>
        <TextView
            android:id="@+id/tv_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space32"
            android:layout_marginLeft="@dimen/space15"
            android:layout_marginRight="@dimen/space15"
            android:layout_marginTop="@dimen/space10"
            android:layout_marginBottom="@dimen/space5"
            android:paddingLeft="@dimen/space16"
            android:drawableLeft="@drawable/ic_search"
            android:drawablePadding="@dimen/space5"
            android:paddingRight="@dimen/space16"
            android:lines="1"
            android:background="@drawable/bg_search_gray"
            android:gravity="center_vertical"
            android:textSize="@dimen/textfont13"
            android:hint="@string/search_hint"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divide_h"
            android:background="@color/bg_divide"
            android:layout_marginLeft="@dimen/space15"
            android:layout_marginRight="@dimen/space15"/>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
</LinearLayout>