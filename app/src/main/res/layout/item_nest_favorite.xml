<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/space15">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/space10">
        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/space40"
            android:layout_height="@dimen/space40"
            android:layout_marginRight="@dimen/space10"/>
        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textfont16"
            android:textColor="@color/text_black"
            android:text=""/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space10"
        android:textColor="@color/text_black"
        android:textSize="@dimen/textfont14"
        android:text=""/>
    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space120"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>
</LinearLayout>