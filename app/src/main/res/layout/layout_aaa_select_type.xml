<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fl_select_view">

    <ImageView
        android:id="@+id/iv_shomd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_7f7f7f" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/space15">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_eeeeee"
                android:gravity="center"
                android:padding="@dimen/space10"
                android:text="全部"
                android:textSize="@dimen/textfont12" />

            <TextView
                android:id="@+id/tv_tranform_ksb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space10"
                android:layout_weight="1"
                android:background="@color/color_eeeeee"
                android:gravity="center"
                android:padding="@dimen/space10"
                android:text="转KSB"
                android:textSize="@dimen/textfont12" />

            <TextView
                android:id="@+id/tv_ksb_tranform_aaa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space10"
                android:layout_weight="1"
                android:background="@color/color_eeeeee"
                android:gravity="center"
                android:padding="@dimen/space10"
                android:text="KSB转AAA"
                android:textSize="@dimen/textfont12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tibi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_eeeeee"
                android:gravity="center"
                android:padding="@dimen/space10"
                android:text="提币"
                android:textSize="@dimen/textfont12" />

            <TextView
                android:id="@+id/tv_coin_charging"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space10"
                android:layout_weight="1"
                android:background="@color/color_eeeeee"
                android:gravity="center"
                android:padding="@dimen/space10"
                android:text="充币"
                android:textSize="@dimen/textfont12" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_eeeeee"
                android:gravity="center"
                android:padding="@dimen/space10"
                android:text="充币"
                android:textSize="@dimen/textfont12"
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>


</FrameLayout>