<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root"
    android:layout_width="260dp"
    android:layout_height="375dp"
    android:background="@drawable/bg_open_redbag"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/space63"
        android:layout_height="@dimen/space63"
        android:layout_marginTop="@dimen/space71" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space11"
        android:textColor="@color/text_redbag_name"
        android:textSize="@dimen/textfont18" />

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space15"
        android:text="@string/format_normal"
        android:textColor="@color/text_white"
        android:textSize="@dimen/textfont13" />

    <EditText
        android:id="@+id/et_word"
        android:layout_width="@dimen/space150"
        android:layout_height="@dimen/space32"
        android:layout_marginTop="@dimen/space15"
        android:background="@drawable/bg_input_word"
        android:gravity="center"
        android:hint="@string/input_word_hint"
        android:lines="1"
        android:textColor="@color/text_black"
        android:textSize="@dimen/textfont15" />

    <TextView
        android:id="@+id/tv_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space15"
        android:background="@drawable/bg_open_redbag_btn"
        android:gravity="center"
        android:text="@string/right_now_get"
        android:textColor="#bd6e17"
        android:textSize="@dimen/textfont15" />

      <!--  android:background="@drawable/bg_redbag_drag"-->
        <com.guochuang.mimedia.view.DragView
            android:id="@+id/drag_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space25"
            android:layout_marginTop="44dp"
            android:layout_marginRight="@dimen/space25"
            android:elevation="@dimen/space8"
            android:background="@drawable/bg_redbag_dragopen_shap"
            android:padding="@dimen/dp_4"
            android:visibility="gone"
            app:center_Imag="@drawable/bg_redbag_jiantou"
            app:gray_Imag="@drawable/ic_redbag_gary_drag"
            app:src_Imag="@drawable/ic_redbag_drag" />
</LinearLayout>