<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_red">
    <LinearLayout
        android:id="@+id/lin_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/title_height"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_back_white" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/text_white"
                android:textSize="@dimen/textfont18" />
            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingLeft="@dimen/space15"
                android:paddingRight="@dimen/space15"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textfont14" />
        </RelativeLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:focusable="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/space130"
            android:layout_marginLeft="@dimen/space8"
            android:layout_marginRight="@dimen/space8"
            android:background="@drawable/bg_my_city_white"/>
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space25"
            android:layout_marginRight="@dimen/space25">
            <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/space50"
            android:background="@drawable/bg_white_block"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/space20">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/space35"
                    android:paddingLeft="@dimen/space15"
                    android:paddingRight="@dimen/space15"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textfont13"
                        android:textColor="@color/text_black"
                        android:text="@string/cur_area"/>
                    <TextView
                        android:id="@+id/tv_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space9"
                        android:textSize="@dimen/textfont13"
                        android:textColor="@color/text_black" />
                </LinearLayout>
            <LinearLayout
                android:layout_width="99dp"
                android:layout_height="133dp"
                android:gravity="bottom"
                android:background="@drawable/bg_city_crown_large">
                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="99dp"
                    android:layout_height="99dp"
                    android:padding="@dimen/space2" />
            </LinearLayout>
                <LinearLayout
                    android:id="@+id/lin_next_buy_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/space35"
                    android:paddingLeft="@dimen/space15"
                    android:paddingRight="@dimen/space15"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textfont13"
                        android:textColor="@color/text_black"
                        android:text="@string/next_buy_time"/>
                    <TextView
                        android:id="@+id/tv_next_buy_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space9"
                        android:textSize="@dimen/textfont13"
                        android:textColor="@color/text_black" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space15"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textfont16" />
            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space15"
                android:textColor="@color/text_city_yellow"
                android:textSize="@dimen/textfont18" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="@dimen/space35"
                android:layout_marginRight="@dimen/space35"
                android:layout_marginTop="@dimen/space15">
            <TextView
                android:id="@+id/tv_buy_city_owner"
                android:layout_width="@dimen/space100"
                android:layout_height="@dimen/space25"
                android:gravity="center"
                android:layout_marginRight="@dimen/space45"
                android:background="@drawable/bg_btn_red_shadow"
                android:textSize="@dimen/textfont14"
                android:textColor="@color/text_white"
                android:text="@string/buy_city_owner"/>
            <TextView
                android:id="@+id/tv_buy_record"
                android:layout_width="@dimen/space100"
                android:layout_height="@dimen/space25"
                android:gravity="center"
                android:background="@drawable/bg_btn_red_shadow"
                android:textSize="@dimen/textfont14"
                android:textColor="@color/text_white"
                android:text="@string/buy_record"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/space35"
                android:layout_marginRight="@dimen/space35"
                android:layout_marginTop="@dimen/space15"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textfont14" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space10"
                android:layout_marginTop="@dimen/space10"
                android:layout_marginRight="@dimen/space10"
                android:nestedScrollingEnabled="false" />
            <TextView
                android:id="@+id/tv_special_price"
                android:layout_width="@dimen/space100"
                android:layout_height="@dimen/space25"
                android:layout_marginTop="@dimen/space20"
                android:gravity="center"
                android:background="@drawable/bg_btn_red_shadow"
                android:textSize="@dimen/textfont14"
                android:textColor="@color/text_white"
                android:text="@string/format_special_price"/>
            <TextView
                android:id="@+id/tv_benefit_explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space20"
                android:layout_marginBottom="@dimen/space30"
                android:gravity="center"
                android:textSize="@dimen/textfont13"
                android:textColor="@color/text_blue"
                android:text="@string/city_owner_benefit_explain"/>
        </LinearLayout>
        </FrameLayout>
        </android.support.v4.widget.NestedScrollView>
    </FrameLayout>
    <include layout="@layout/layout_city_none"/>
</LinearLayout>