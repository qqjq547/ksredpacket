<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="@dimen/space15"
    android:paddingTop="@dimen/space10"
    android:paddingRight="@dimen/space15">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_block"
        android:padding="@dimen/space20"
        android:textSize="@dimen/textfont15" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/space13"
        android:text="回答"
        android:textColor="@color/color_666666" />

    <com.guochuang.mimedia.base.recycleview.WrapEmptyRecyclerView
        android:id="@+id/recycle_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/space20"
        app:emptyPageLayout="@layout/layout_empty">

    </com.guochuang.mimedia.base.recycleview.WrapEmptyRecyclerView>


</LinearLayout>