<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title"/>
   <RadioGroup
       android:id="@+id/rg_nav"
       android:layout_width="match_parent"
       android:layout_height="@dimen/space40"
       android:orientation="horizontal"
       android:background="@drawable/bg_income_nav"
       android:layout_marginLeft="@dimen/space15"
       android:layout_marginRight="@dimen/space15">
           <LinearLayout
               android:id="@+id/lin_type"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:gravity="center"
               android:background="@drawable/income_left_selector"
               android:visibility="gone">
               <TextView
                   android:id="@+id/tv_type"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:drawablePadding="@dimen/space5"
                   android:drawableRight="@drawable/ic_arrow_down_selector"
                   android:textColor="@color/income_tab_text_selector"
                   android:textSize="@dimen/textfont16"
                   android:text="@string/income_type_all"/>
           </LinearLayout>
           <LinearLayout
               android:id="@+id/lin_time"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:gravity="center"
               android:background="@drawable/income_selector">
               <TextView
                   android:id="@+id/tv_time"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:drawablePadding="@dimen/space5"
                   android:drawableRight="@drawable/ic_arrow_down_selector"
                   android:textColor="@color/income_tab_text_selector"
                   android:textSize="@dimen/textfont16"
                   android:text="@string/recent_seven_day"/>
           </LinearLayout>
   </RadioGroup>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
   <android.support.v7.widget.RecyclerView
       android:id="@+id/rv_user"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginLeft="@dimen/space15"
       android:layout_marginRight="@dimen/space15">
   </android.support.v7.widget.RecyclerView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>