<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title_text"/>
   <RadioGroup
       android:id="@+id/rg_nav"
       android:layout_width="match_parent"
       android:layout_height="@dimen/space40"
       android:orientation="horizontal"
       android:background="@drawable/bg_income_nav"
       android:layout_marginLeft="@dimen/space15"
       android:layout_marginRight="@dimen/space15">
       <LinearLayout
           android:id="@+id/lin_type"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:gravity="center"
           android:background="@drawable/income_left_selector">
           <TextView
               android:id="@+id/tv_type"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:drawablePadding="@dimen/space5"
               android:drawableRight="@drawable/ic_arrow_down_selector"
               android:textColor="@color/income_tab_text_selector"
               android:textSize="@dimen/textfont16"
               android:text="@string/income_type_all"/>
       </LinearLayout>
       <View
           android:layout_width="@dimen/space1"
           android:layout_height="match_parent"
           android:background="@color/bg_red"/>
       <LinearLayout
           android:id="@+id/lin_time"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:gravity="center"
           android:background="@drawable/income_right_selector">
           <TextView
               android:id="@+id/tv_time"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:drawablePadding="@dimen/space5"
               android:drawableRight="@drawable/ic_arrow_down_selector"
               android:textColor="@color/income_tab_text_selector"
               android:textSize="@dimen/textfont16"
               android:text="@string/recent_seven_day"/>
       </LinearLayout>
   </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:layout_marginLeft="@dimen/space15"
        android:layout_marginTop="@dimen/space20"
        android:layout_marginRight="@dimen/space15"
        android:background="@drawable/bg_myksb_trend"
        android:orientation="vertical">
        <lecho.lib.hellocharts.view.LineChartView
            android:id="@+id/linechart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/space10"
            android:nestedScrollingEnabled="false" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space15"
        android:layout_marginRight="@dimen/space15"
        android:layout_marginTop="@dimen/space10">
        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textfont14"
            android:textColor="@color/text_black" />
    </LinearLayout>
</LinearLayout>