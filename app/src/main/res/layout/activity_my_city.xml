<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title_text" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/space10"
                android:layout_marginLeft="@dimen/space15"
                android:layout_marginRight="@dimen/space15"
                android:layout_marginTop="@dimen/space10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_white_block"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/lin_my_city"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space40"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_city_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/textfont12" />
                    </LinearLayout>

                    <include layout="@layout/layout_divide_deep_line" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/space0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/space20"
                            android:paddingTop="@dimen/space20">

                            <TextView
                                android:id="@+id/tv_city_income"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_drak_black"
                                android:textSize="@dimen/textfont18"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space20"
                                android:text="@string/city_total_benfit"
                                android:textColor="@color/text_gray"
                                android:textSize="@dimen/textfont14" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lin_red_bag"
                            android:layout_width="@dimen/space0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/space20"
                            android:paddingTop="@dimen/space20">

                            <TextView
                                android:id="@+id/tv_red_bag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_drak_black"
                                android:textSize="@dimen/textfont18"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space20"
                                android:text="@string/redbag_benfit_detail"
                                android:textColor="@color/text_blue"
                                android:textSize="@dimen/textfont14" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lin_bid_run"
                            android:layout_width="@dimen/space0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/space20"
                            android:paddingTop="@dimen/space20">

                            <TextView
                                android:id="@+id/tv_bid_run"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_drak_black"
                                android:textSize="@dimen/textfont18"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space20"
                                android:text="@string/buy_record_arrow"
                                android:textColor="@color/text_blue"
                                android:textSize="@dimen/textfont14" />
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/space5"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/textfont12"
                        android:text="@string/unit_ksb"/>
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/space10"
                    android:nestedScrollingEnabled="false"></android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>