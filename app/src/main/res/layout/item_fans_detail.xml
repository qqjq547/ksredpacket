<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/space25"
    android:paddingBottom="@dimen/space25"
    android:paddingLeft="@dimen/space15"
    android:paddingRight="@dimen/space15"
    android:gravity="center"
    android:background="@drawable/bg_white_block">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/textfont14"
        android:textColor="@color/text_black" />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/text_black"
        android:textSize="@dimen/textfont14" />
    <TextView
        android:id="@+id/tv_ksb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:textSize="@dimen/textfont16"
        android:textColor="@color/text_city_yellow" />
</LinearLayout>

</LinearLayout>