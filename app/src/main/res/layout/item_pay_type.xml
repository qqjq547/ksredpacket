<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_header_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space25"
        android:layout_marginTop="@dimen/space10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="@dimen/space30"
            android:layout_height="@dimen/space30" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/space5"
            android:text="123"
            android:textColor="@color/text_drak_black"
            android:textSize="@dimen/textfont14" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_header_all"
        android:layout_marginBottom="@dimen/space10"
        android:layout_marginLeft="@dimen/space25"
        android:layout_marginTop="@dimen/space5"
        android:text="123"
        android:textColor="@color/text_drak_black"
        android:textSize="@dimen/textfont12" />

    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="@dimen/space30"
        android:layout_height="@dimen/space30"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/space25"
        android:src="@drawable/ic_my_ksb_transfer_check"
        android:visibility="gone" />
</RelativeLayout>