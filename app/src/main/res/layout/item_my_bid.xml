<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_block"
    android:padding="@dimen/space15">
<ImageView
    android:id="@+id/iv_avatar"
    android:layout_width="@dimen/space40"
    android:layout_height="@dimen/space40"
    android:layout_gravity="center_vertical"
    android:scaleType="centerInside"
    android:src="@drawable/ic_bid_lead"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/space6">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/textfont14"
            android:textColor="@color/text_black"
            android:text=""/>
            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textfont14"
                android:textColor="@color/text_black"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space12"
            android:gravity="bottom">
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/textfont14"
                android:textColor="@color/text_black"
                android:text="@string/format_price_and_total"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textfont12"
                android:textColor="@color/text_black"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>