<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:background="@color/bg_red" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space15"
            android:layout_marginTop="@dimen/space30"
            android:layout_marginRight="@dimen/space15"
            android:background="@drawable/bg_white_block"
            android:padding="@dimen/space15">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/space15"
                android:paddingBottom="@dimen/space15">


                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@string/zero"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/textfont18"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space15"
                    android:text="@string/has_send_num"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/textfont15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/space15"
                android:paddingBottom="@dimen/space15">

                <TextView
                    android:id="@+id/tv_has_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@string/zero"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/textfont18"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space15"
                    android:text="@string/has_send_money"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/textfont15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/space15"
                android:paddingBottom="@dimen/space15">

                <TextView
                    android:id="@+id/tv_grab_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@string/zero"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/textfont18"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space15"
                    android:text="@string/grab_redbag_num"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/textfont15" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.guochuang.mimedia.base.recycleview.WrapEmptyRecyclerView
            android:id="@+id/rv_record"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:emptyPageLayout="@layout/layout_empty">

        </com.guochuang.mimedia.base.recycleview.WrapEmptyRecyclerView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>