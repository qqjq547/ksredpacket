<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/space15"
    android:paddingBottom="5dp">


    <TextView
        android:id="@+id/tv_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A.平头哥半导体有限公司"
        android:textColor="@color/color_666666" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

      <!--  <com.guochuang.mimedia.view.CustomProgress
            android:id="@+id/custom_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />-->

        <TextView
            android:id="@+id/tv_percentage"
            android:layout_width="40dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space18"
            android:layout_marginTop="5dp"
            android:text="100%"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_ff7519"/>


        <com.guochuang.mimedia.view.CustomProgress
            android:id="@+id/custom_progress"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="14dp"
            android:layout_toLeftOf="@+id/tv_percentage"/>


    </RelativeLayout>


</LinearLayout>