<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_white">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/space250"
                android:scaleType="fitXY"
                android:src="@drawable/bg_recommend_agent_banner"/>
                <TextView
                    android:id="@+id/tv_temp_name"
                    android:layout_width="@dimen/space200"
                    android:layout_height="@dimen/space100"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/bg_bee_temp_name"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/textfont18"
                    android:text="xxxxxxxxxxxxx"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-50dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/lin_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space10"
                    android:layout_marginRight="@dimen/space10"
                    android:paddingLeft="@dimen/space15"
                    android:paddingRight="@dimen/space15"
                    android:paddingTop="@dimen/space10"
                    android:paddingBottom="@dimen/space10"
                    android:orientation="vertical"
                    android:background="@drawable/bg_white_block">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space40"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:lines="1"
                            android:ellipsize="end"
                            android:textSize="@dimen/textfont15"
                            android:textColor="@color/text_black"
                            android:text=""/>
                    </LinearLayout>
                    <include layout="@layout/layout_divide_deep_line"/>
                    <TextView
                        android:id="@+id/tv_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space7"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/textfont14"
                        android:text=""/>
                    <TextView
                        android:id="@+id/tv_url"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/space20"
                        android:background="@drawable/bg_white_block"
                        android:paddingBottom="@dimen/space10"
                        android:paddingLeft="@dimen/space13"
                        android:paddingRight="@dimen/space13"
                        android:paddingTop="@dimen/space10"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/textfont14"
                        android:visibility="visible" />
                    <LinearLayout
                        android:id="@+id/lin_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space20"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/space5"
                            android:src="@drawable/ic_address"/>
                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/space5"
                            android:textSize="@dimen/textfont16"
                            android:textColor="@color/text_black"
                            android:text=""/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space20"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/lin_call"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">
                        <TextView
                            android:id="@+id/tv_call"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_white_block_corner"
                            android:paddingLeft="@dimen/space15"
                            android:paddingRight="@dimen/space15"
                            android:paddingTop="@dimen/space5"
                            android:paddingBottom="@dimen/space5"
                            android:gravity="center"
                            android:drawableLeft="@drawable/ic_bee_mobile"
                            android:drawablePadding="@dimen/space10"
                            android:textSize="@dimen/space12"
                            android:textColor="@color/text_black"
                            android:text="@string/call"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lin_wechat"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">
                        <TextView
                            android:id="@+id/tv_wechat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_white_block_corner"
                            android:paddingLeft="@dimen/space15"
                            android:paddingRight="@dimen/space15"
                            android:paddingTop="@dimen/space5"
                            android:paddingBottom="@dimen/space5"
                            android:gravity="center"
                            android:drawableLeft="@drawable/ic_bee_wechat"
                            android:drawablePadding="@dimen/space10"
                            android:textSize="@dimen/space12"
                            android:textColor="@color/text_black"
                            android:text="@string/copy"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lin_weibo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">
                        <TextView
                            android:id="@+id/tv_weibo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_white_block_corner"
                            android:paddingLeft="@dimen/space15"
                            android:paddingRight="@dimen/space15"
                            android:paddingTop="@dimen/space5"
                            android:paddingBottom="@dimen/space5"
                            android:gravity="center"
                            android:drawableLeft="@drawable/ic_bee_weibo"
                            android:drawablePadding="@dimen/space12"
                            android:textSize="@dimen/textfont15"
                            android:textColor="@color/text_black"
                            android:text="@string/copy"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_picture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space15"
                    android:layout_marginTop="@dimen/space5"
                    android:layout_marginRight="@dimen/space15"
                    android:nestedScrollingEnabled="false"></android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>